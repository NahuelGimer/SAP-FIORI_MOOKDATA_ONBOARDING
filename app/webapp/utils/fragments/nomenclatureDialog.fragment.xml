<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="myResizablePopover"
		title="{mEmployee>/courses/0/area}"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
		placement="Right"
		resizable="true"
		initialFocus="close">
        <Text text="{i18n>text}"></Text>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					id="close"
					text="Close"
					press=".handleClose" />
			</OverflowToolbar>
		</footer>
	</Popover>
</core:FragmentDefinition>
